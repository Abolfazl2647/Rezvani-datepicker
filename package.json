{
  "private": true,
  "name": "rezvani-monorepo",
  "scripts": {
    "dev": "pnpm --filter playground dev",

    "build": "pnpm -r build",

    "build:date-picker": "pnpm --filter @rezvani/date-picker build",
    "build:time-picker": "pnpm --filter @rezvani/time-picker build",
    "build:playground": "pnpm --filter playground build",

    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",

    "lint:date-picker": "pnpm --filter @rezvani/date-picker lint",
    "lint:time-picker": "pnpm --filter @rezvani/time-picker lint",
    "lint:playground": "pnpm --filter playground lint",

    "format": "pnpm -r format",

    "format:date-picker": "pnpm --filter @rezvani/date-picker format",
    "format:time-picker": "pnpm --filter @rezvani/time-picker format",
    "format:playground": "pnpm --filter playground format"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "^3.6.2",
    "tsup": "^8.0.0",
    "typescript": "^5.6.0"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^19.1.1"
  }
}